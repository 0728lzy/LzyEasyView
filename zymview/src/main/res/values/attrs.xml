<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>

    <declare-styleable name="LZYRippleButton">
        <attr name="rippleColor" format="color" />
        <attr name="rippleSpeed" format="integer" />
        <attr name="rippleRepeat" format="boolean" />
        <attr name="rippleLocation" format="enum">
            <enum name="auto" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="cornerBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ZYMExpandableQAView">
        <!-- 问题 -->
        <attr name="qa_questionText" format="string" />
        <attr name="qa_questionTextSize" format="dimension" />
        <attr name="qa_questionTextColor" format="color" />
        <attr name="qa_questionTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <!-- 答案 -->
        <attr name="qa_answerText" format="string" />
        <attr name="qa_answerTextSize" format="dimension" />
        <attr name="qa_answerTextColor" format="color" />
        <attr name="qa_answerTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <!-- 图标 -->
        <attr name="qa_iconSrc" format="reference" />
        <attr name="qa_iconWidth" format="dimension" />
        <attr name="qa_iconHeight" format="dimension" />
        <attr name="qa_iconTint" format="color" />
        <!-- 分割线 -->
        <attr name="qa_dividerHeight" format="dimension" />
        <attr name="qa_dividerMarginHorizontal" format="dimension"/>
        <attr name="qa_dividerMarginVertical" format="dimension"/>
        <attr name="qa_dividerColor" format="color" />
        <!-- 小巧思 -->
        <attr name="qa_expandAnimType" format="enum">
            <enum name="fade" value="0"/>
            <enum name="slide" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ZYMDoubleBorderLayout">
        <attr name="borderBackground1" format="reference" />
        <attr name="borderBackground2" format="reference" />
    </declare-styleable>

    <declare-styleable name="ZYMClockSelectorView">
        <attr name="zym_textSize" format="dimension"/>
        <attr name="zym_textColor" format="color"/>
        <attr name="zym_circleRadius" format="dimension"/>
        <attr name="zym_circleColor" format="color"/>
        <attr name="zym_pointerWidth" format="dimension"/>
        <attr name="zym_pointerColor" format="color"/>
        <attr name="zym_centerDotColor" format="color"/>
        <attr name="zym_mode" format="enum">
            <enum name="hour" value="0"/>
            <enum name="minute" value="1"/>
            <enum name="hour_minute" value="2"/>
        </attr>
        <attr name="zym_pointerInnerPadding" format="float"/>
        <attr name="zym_pointerOuterPadding" format="float"/>
        <attr name="zym_dragStartRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="ZYMCompassView">
        <!-- 表盘背景颜色，默认白色 -->
        <attr name="zym_dialBackgroundColor" format="color" />
        <!-- 东南西北字体大小，默认16dp -->
        <attr name="zym_cardinalTextSize" format="dimension" />
        <!-- 刻度数字字体大小，默认14dp -->
        <attr name="zym_numberTextSize" format="dimension" />
        <!-- 北向指针和文字颜色，默认红色 -->
        <attr name="zym_northColor" format="color" />
        <!-- 指针长度比例 (相对于半径)，默认0.7 (即半径的70%) -->
        <attr name="zym_pointerScale" format="float" />
        <!-- 外圈距离刻度线的间距，默认3dp -->
        <attr name="zym_outerCircleGap" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ZYMTrendLineView">
        <!-- 波形图与坐标文字的间距，默认 8dp -->
        <attr name="zym_axis_text_margin" format="dimension"/>
        <!-- 数据最大值，默认 100f -->
        <attr name="zym_max_value" format="float"/>
        <!-- 数据最小值，默认 0f -->
        <attr name="zym_min_value" format="float"/>
        <!-- 数据单位，例如 % 或 °C -->
        <attr name="zym_unit" format="string"/>
        <!-- 是否显示左侧 Y 轴文字，默认 true -->
        <attr name="zym_show_y_text" format="boolean"/>
        <!-- 左侧坐标文字大小，默认 12dp -->
        <attr name="zym_text_size" format="dimension"/>
        <!-- 左侧 Y 轴显示的标签数量，默认 6 -->
        <attr name="zym_y_label_count" format="integer"/>
        <!-- 左侧 Y 轴文字颜色，默认黑色 -->
        <attr name="zym_text_color" format="color"/>
        <!-- 折线颜色，默认 #AA00FF -->
        <attr name="zym_stroke_color" format="color"/>
        <!-- 折线宽度，默认 2dp -->
        <attr name="zym_stroke_width" format="dimension"/>
        <!-- 下方渐变区域起始颜色，默认 #80AA00FF -->
        <attr name="zym_fill_start_color" format="color"/>
        <!-- 下方渐变区域结束颜色，默认 #10AA00FF -->
        <attr name="zym_fill_end_color" format="color"/>
        <!-- 绘制区域内的可见数据点数量，默认 10 -->
        <attr name="zym_visible_point_count" format="integer"/>
        <!-- 线条类型：折线 或 平滑曲线 -->
        <attr name="zym_line_type" format="enum">
            <enum name="polyline" value="0"/>
            <enum name="smooth" value="1"/>
        </attr>
    </declare-styleable>

</resources>